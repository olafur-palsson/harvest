{
    "compilerOptions": {
        "lib": ["esnext"],
        "noImplicitUseStrict": true,
        "module": "esnext",
        "outDir": "build",
        "target": "esnext",
        "moduleResolution": "nodenext",
        "noEmit": true,
        "allowJs": true, // allow importing `.js` from `.ts`
        "esModuleInterop": true, // allow default imports for CommonJS modules
        "skipLibCheck": true
    }
}
